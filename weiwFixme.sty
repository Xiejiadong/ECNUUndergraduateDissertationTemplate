%% packages
\RequirePackage{color,xcolor}
\RequirePackage{tocloft}

\newcommand{\listfixmename}{List of FIXMEs}
\newlistof{fixme}{fxm}{\listfixmename}

\newcommand{\fixme}[1]{%
  \refstepcounter{fixme}
  \footnote{\textbf{FIXME!!!} #1}%
  \addcontentsline{fxm}{fixme}{\protect\numberline{\thefixme}#1}\par%
}

\newcommand{\listoffixmes}{
  {\color{red}\listoffixme}
}



